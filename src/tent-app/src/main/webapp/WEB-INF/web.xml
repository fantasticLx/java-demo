<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name>tent</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!--log4j配置地址 -->
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:log4j.properties</param-value>
  </context-param>

  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:applicationContext.xml</param-value>
  </context-param>

  <!-- [Begin]listener -->
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.zp.tent.app.listener.SessionListenerTest</listener-class>
  </listener>
  <listener>
    <listener-class>com.zp.tent.app.listener.LoginSessionListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.zp.tent.app.listener.ListenerTest</listener-class>
  </listener>
  <listener>
    <listener-class>com.zp.tent.app.listener.MyContextListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.zp.tent.app.listener.MySessionListener</listener-class>
  </listener>
  <listener>
    <listener-class>com.zp.tent.app.listener.MyRequestListener</listener-class>
  </listener>
  <!-- [End]listener -->

  <!-- [Begin]Filter -->
  <!-- authenFilter -->
  <filter>
    <filter-name>authenFilter</filter-name>
    <filter-class>com.zp.tent.app.filter.AuthenFilter</filter-class>
    <init-param>
      <param-name>test-param</param-name>
      <param-value>AuthenFilter Init Paramter</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>authenFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>characterEncodingFilter</filter-name>
    <filter-class>com.zp.tent.app.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>characterEncoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>enable</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>characterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- exceptionHandlerFilter -->
  <filter>
    <filter-name>exceptionHandlerFilter</filter-name>
    <filter-class>com.zp.tent.app.filter.ExceptionHandlerFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>exceptionHandlerFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- gzipFilter -->
  <filter>
    <filter-name>gzipFilter</filter-name>
    <filter-class>com.zp.tent.app.filter.GZipFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>gzipFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- imageRedirectFilter -->
  <filter>
    <filter-name>imageRedirectFilter</filter-name>
    <filter-class>com.zp.tent.app.filter.ImageRedirectFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>imageRedirectFilter</filter-name>
    <url-pattern>/upload/images/*</url-pattern>
  </filter-mapping>
  <!-- logFilter -->
  <filter>
    <filter-name>logFilter</filter-name>
    <filter-class>com.zp.tent.app.filter.LogFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>logFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- outputReplaceFilter -->
  <filter>
    <filter-name>outputReplaceFilter</filter-name>
    <filter-class>com.zp.tent.app.filter.OutputReplaceFilter</filter-class>
    <init-param>
      <param-name>file</param-name>
      <param-value>/WEB-INF/sensitive.properties</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>outputReplaceFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>
  <!-- privilegeFilter -->
  <filter>
    <filter-name>privilegeFilter</filter-name>
    <filter-class>com.zp.tent.app.filter.PrivilegeFilter</filter-class>
    <init-param>
      <param-name>file</param-name>
      <param-value>/WEB-INF/privilege.properties</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>privilegeFilter</filter-name>
    <url-pattern>*.do</url-pattern>
  </filter-mapping>
  <!-- SiteHitsFilter -->
  <filter>
    <filter-name>SiteHitsFilter</filter-name>
    <filter-class>com.zp.tent.app.filter.SiteHitsFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>SiteHitsFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- xsltFilter -->
  <filter>
    <filter-name>xsltFilter</filter-name>
    <filter-class>com.zp.tent.app.filter.XSLTFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>xsltFilter</filter-name>
    <url-pattern>/msn/*</url-pattern>
  </filter-mapping>
  <!-- [End]Filter -->

  <!-- 声明前端控制器 -->
  <servlet>
    <servlet-name>tent-app</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <!-- 如果不设置的话，默认的servlet配置文件名为xxx-servlet.xml -->
      <param-name>contextConfigLocation</param-name>
      <param-value>classpath:tent-app-spring.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <!-- 声明DispatcherServlet处理哪些URL -->
  <servlet-mapping>
    <servlet-name>tent-app</servlet-name>
    <!-- 映射到/表示会处理所有的请求 -->
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>