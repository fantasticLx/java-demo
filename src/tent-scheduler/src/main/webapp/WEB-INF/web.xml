<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <display-name>tent-scheduler</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

    <!-- [Begin]Listener -->
    <!--初始化log4j监听器 -->
    <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>classpath:log4j.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    <description>Log4jConfigListener的作用是：根据配置文件初始化log4j。需要配置名为log4jConfigLocation的context-param</description>
  </listener>

    <!-- 初始化applicationContext监听器 -->
    <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>/WEB-INF/applicationContext.xml</param-value>
  </context-param>
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    <description>ContextLoaderListener的作用是：启动Web容器时，自动装配ApplicationContext的配置信息。需要配置名为contextConfigLocation的context-param</description>
  </listener>
    <!-- [End]Listener -->

    <!-- [Begin]Filter -->
    <!-- 字符编码过滤器：强制将HttpServletRequest转为UTF-8编码格式 -->
    <filter>
    <filter-name>characterEncodingFilter</filter-name>
    <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
    <init-param>
      <param-name>forceEncoding</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>characterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
    <!-- [End]Filter -->

    <!-- [Begin]Servlet -->
    <!-- 声明前端控制器 -->
    <servlet>
    <servlet-name>tent-scheduler</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <!-- 如果不设置的话，默认的servlet配置文件名为xxx-servlet.xml -->
        <param-name>contextConfigLocation</param-name>
      <param-value>classpath:tent-scheduler-spring.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

    <!-- 声明DispatcherServlet处理哪些URL -->
    <servlet-mapping>
    <servlet-name>tent-scheduler</servlet-name>
        <!-- 映射到/表示会处理所有的请求 -->
        <url-pattern>/</url-pattern>
  </servlet-mapping>
    <!-- [End]Servlet -->
</web-app>